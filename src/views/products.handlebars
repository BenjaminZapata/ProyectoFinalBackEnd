<nav style="display: flex; align-items: center; gap: 1em;">
  <h1>Bienvenido, {{user.role}} <a href="/api/users/profile" style="color: #464646 !important; text-decoration: none !important;" title="Ir al perfil">{{user.email}}</a></h1>
  <button onclick="logout()">Logout</button>
  <button onclick="window.location.href='http://localhost:8080/api/carts/1'">Ver carrito</button>
</nav>
<section>
  <header>
    <h6>Mostrando {{limit}} de {{totalDocs}} productos</h6>
    <form id="sortForm" method="get">
      <label>Ordenar por</label>
      <select name="sort">
        <option value="">Seleccione una opcion</option>
        <option value="asc">Precio ascendente</option>
        <option value="desc">Precio descendente</option>
        <option value="cat">Por categoria</option>
        <option value="stock">Por stock</option>
      </select>
      <label>Mostrar</label>
      <select name="entries">
        <option value="">Seleccione una cantidad</option>
        <option value="5">5</option>
        <option value="10">10</option>
        <option value="15">15</option>
      </select>
      <button>Filtrar</button>
    </form>
  </header>
  <ol>
    {{#each docs}}
      <li style="display: flex; gap: 0.5em; align-items: center;">
        <img style="width: 50px;" src="{{this.thumbnails}}"/>
        <p style="margin: .5em 0;">{{this.code}} - {{this.name}} - {{this.category}} - ${{this.sellingPrice}} - STOCK: {{this.stock}}</p>
        <button onclick="addToCart('{{this.code}}')">AÃ±adir al carrito</button>
      </li>
    {{/each}}
  </ol>
  <div>
    {{#if hasPrevPage}}
      <a href="{{prevLink}}">Anterior</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="{{nextLink}}">Siguiente</a>
    {{/if}}
  </div>
</section>

<script src="/products.js"></script>